#define HOR_SUP 2
#define VERT_SUP_DIR 3
#define VERT_INF_DIR 4
#define HOR_INF 5
#define VERT_INF_ESQ 6
#define VERT_SUP_ESQ 7
#define HOR_MID 8
 
void setup() {                
  pinMode(2, OUTPUT);   
  pinMode(3, OUTPUT);
  pinMode(4, OUTPUT);
  pinMode(5, OUTPUT);
  pinMode(6, OUTPUT);
  pinMode(7, OUTPUT);
  pinMode(8, OUTPUT);
  pinMode(9, OUTPUT);
  
  digitalWrite(2, LOW);
  digitalWrite(3, LOW);
  digitalWrite(4, LOW);
  digitalWrite(5, LOW);
  digitalWrite(6, LOW);
  digitalWrite(7, LOW);
  digitalWrite(8, LOW);
  digitalWrite(9, LOW);
  
} 
 
void loop() {   

  digitalWrite(HOR_SUP, HIGH);
  digitalWrite(VERT_SUP_DIR, HIGH);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, HIGH);
  digitalWrite(VERT_INF_ESQ, HIGH);
  digitalWrite(VERT_SUP_ESQ, HIGH);
  digitalWrite(HOR_INF, HIGH);
  digitalWrite(9, HIGH);

delay (1000);

//numero 1
  digitalWrite(HOR_SUP, LOW);
  digitalWrite(VERT_SUP_DIR, HIGH);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, LOW);
  digitalWrite(VERT_INF_ESQ, LOW);
  digitalWrite(VERT_SUP_ESQ, LOW);
  digitalWrite(HOR_INF, LOW);
  digitalWrite(9, LOW);
delay (1000);

//numero 2
  digitalWrite(HOR_SUP, HIGH);
  digitalWrite(VERT_SUP_DIR, HIGH);
  digitalWrite(VERT_INF_DIR, LOW);
  digitalWrite(HOR_MID, HIGH);
  digitalWrite(VERT_INF_ESQ, HIGH);
  digitalWrite(VERT_SUP_ESQ, LOW);
  digitalWrite(HOR_INF, HIGH);
  digitalWrite(9, LOW);
delay (1000);

//numero 3
  digitalWrite(HOR_SUP, HIGH);
  digitalWrite(VERT_SUP_DIR, HIGH);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, HIGH);
  digitalWrite(VERT_INF_ESQ, LOW);
  digitalWrite(VERT_SUP_ESQ, LOW);
  digitalWrite(HOR_INF, HIGH);
  digitalWrite(9, LOW);
delay (1000);

//numero 4
  digitalWrite(HOR_SUP, LOW);
  digitalWrite(VERT_SUP_DIR, HIGH);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, HIGH);
  digitalWrite(VERT_INF_ESQ, LOW);
  digitalWrite(VERT_SUP_ESQ, HIGH);
  digitalWrite(HOR_INF, LOW);
  digitalWrite(9, LOW);
delay (1000);

//numero 5
  digitalWrite(HOR_SUP, HIGH);
  digitalWrite(VERT_SUP_DIR, LOW);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, HIGH);
  digitalWrite(VERT_INF_ESQ, LOW);
  digitalWrite(VERT_SUP_ESQ, HIGH);
  digitalWrite(HOR_INF, HIGH);
  digitalWrite(9, LOW);
delay (1000);

//numero 6
  digitalWrite(HOR_SUP, LOW);
  digitalWrite(VERT_SUP_DIR, LOW);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, HIGH);
  digitalWrite(VERT_INF_ESQ, HIGH);
  digitalWrite(VERT_SUP_ESQ, HIGH);
  digitalWrite(HOR_INF, HIGH);
  digitalWrite(9, LOW);
delay (1000);

//numero 7
  digitalWrite(HOR_SUP, HIGH);
  digitalWrite(VERT_SUP_DIR, HIGH);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, LOW);
  digitalWrite(VERT_INF_ESQ, LOW);
  digitalWrite(VERT_SUP_ESQ, LOW);
  digitalWrite(HOR_INF, LOW);
  digitalWrite(9, LOW);
delay (1000);

//numero 8
  digitalWrite(HOR_SUP, HIGH);
  digitalWrite(VERT_SUP_DIR, HIGH);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, HIGH);
  digitalWrite(VERT_INF_ESQ, HIGH);
  digitalWrite(VERT_SUP_ESQ, HIGH);
  digitalWrite(HOR_INF, HIGH);
  digitalWrite(9, LOW);
delay (1000);

//numero 9
  digitalWrite(HOR_SUP, HIGH);
  digitalWrite(VERT_SUP_DIR, HIGH);
  digitalWrite(VERT_INF_DIR, HIGH);
  digitalWrite(HOR_MID, HIGH);
  digitalWrite(VERT_INF_ESQ, LOW);
  digitalWrite(VERT_SUP_ESQ, HIGH);
  digitalWrite(HOR_INF, HIGH);
  digitalWrite(9, LOW);
delay (1000);

}
